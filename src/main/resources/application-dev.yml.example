spring:
    config:
        activate:
            on-profile: dev
    datasource:
        url: jdbc:postgresql://${DB_HOST:localhost}:${DB_PORT:5432}/${DB_NAME:file_flow}
        username: ${DB_USER:postgres}
        password: ${DB_PASS:admin}
    jpa:
        properties:
            hibernate:
                show_sql: true
                format_sql: true
                ddl-auto: none
                dialect: org.hibernate.dialect.PostgreSQLDialect